<%- include("../partials/header.ejs") %>
<%= pessoa%>
<h1 style="margin-top: 100px;">Editar pessoa</h1>
<p><a href="/pessoas">Voltar a lista de pessoas</a></p>

<form method="post">
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" class="form-control" name="nome" id="nome" value="<%= pessoa.nome %>">
  </div>
  <div class="form-group">
    <label for="nascimento">Nascimento</label>
    <input type="text" class="form-control" name="nascimento" id="nascimento" value="<%= pessoa.nascimento %>">
  </div>
  <div class="form-group">
    <label for="cargo">Cargo</label>
    <input type="text" class="form-control" name="cargo" id="cargo" value="<%= pessoa.cargo %>">
  </div>
  
  <button type="submit" class="btn btn-default">Salvar</button>
</form>
<%- include("../partials/footer.ejs") %>